<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profile_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jw1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/nickname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jiwoong"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/profile_img"
        app:layout_constraintBottom_toTopOf="@+id/feedImg_img" />

    <ImageView
        android:id="@+id/more_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_more_vert_24"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/feedImg_img"/>

    <ImageView
        android:id="@+id/feedImg_img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/jw2"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_img"/>

    <ImageView
        android:id="@+id/favorite_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_favorite_border"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feedImg_img"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/chat_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_chat_black"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feedImg_img"
        app:layout_constraintLeft_toRightOf="@+id/favorite_img"/>

    <ImageView
        android:id="@+id/directMessage_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_near_me_24"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/feedImg_img"
        app:layout_constraintLeft_toRightOf="@+id/chat_img"/>

    <ImageView
        android:id="@+id/favoriteProfile_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/jw3"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/favorite_img"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/nickname_favorite_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kkm"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/favorite_img"
        app:layout_constraintLeft_toRightOf="@+id/favoriteProfile_img" />

    <TextView
        android:id="@+id/favoriteNumber_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님 외 34명이 좋아합니다"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/favorite_img"
        app:layout_constraintLeft_toRightOf="@+id/nickname_favorite_text" />

    <TextView
        android:id="@+id/nickname_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jiwoong"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/favoriteProfile_img"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문희준입니다"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/favoriteProfile_img"
        app:layout_constraintLeft_toRightOf="@+id/nickname_description_text" />


</androidx.constraintlayout.widget.ConstraintLayout>